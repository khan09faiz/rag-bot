{
  "info": {
    "name": "RAG Bot API",
    "description": "Postman collection covering health, ingest, search, and chat endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/healthz",
              "host": ["{{baseUrl}}"],
              "path": ["healthz"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ingest",
      "item": [
        {
          "name": "Upload File Ingest",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "example.pdf" },
                { "key": "title", "type": "text", "value": "Example PDF" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ingest",
              "host": ["{{baseUrl}}"],
              "path": ["ingest"]
            }
          },
          "response": []
        },
        {
          "name": "Text Ingest",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Sample text content to ingest.\",\n  \"title\": \"Sample Title\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ingest/text",
              "host": ["{{baseUrl}}"],
              "path": ["ingest", "text"]
            }
          },
          "response": []
        },
        {
          "name": "Get Ingest Job Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/ingest/{{job_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["ingest", "{{job_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Search Hybrid",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What is contained in the document?\",\n  \"top_k\": 10,\n  \"hybrid\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/search",
              "host": ["{{baseUrl}}"],
              "path": ["search"]
            }
          },
          "response": []
        },
        {
          "name": "Search Vector Only",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What is contained in the document?\",\n  \"top_k\": 10,\n  \"hybrid\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/search",
              "host": ["{{baseUrl}}"],
              "path": ["search"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Chat (Streaming)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"Explain the key points?\",\n  \"top_k\": 25,\n  \"hybrid\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat",
              "host": ["{{baseUrl}}"],
              "path": ["chat"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [],
  "variable": [{ "key": "baseUrl", "value": "http://localhost:8000" }]
}
